{
  "name": "pax-code",
  "displayName": "Pax Code",
  "description": "A beautiful dark theme and keyboard shortcuts reference panel for VS Code",
  "version": "1.0.2",
  "publisher": "Pax97",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pax97/pax-code"
  },
  "bugs": {
    "url": "https://github.com/Pax97/pax-code/issues"
  },
  "homepage": "https://github.com/Pax97/pax-code#readme",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1F1F1F",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Themes",
    "Keymaps",
    "Other"
  ],
  "keywords": [
    "theme",
    "dark theme",
    "night theme",
    "keyboard shortcuts",
    "hotkeys",
    "keybindings"
  ],
  "activationEvents": [
    "onView:hotkeysView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Night Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/Night Theme-color-theme.json"
      },
      {
        "label": "Night Theme Vivid",
        "uiTheme": "vs-dark",
        "path": "./themes/Night Theme Vidid-color-theme.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hotkeysContainer",
          "title": "Hotkeys",
          "icon": "media/symbol-keyword.svg"
        }
      ]
    },
    "views": {
      "hotkeysContainer": [
        {
          "id": "hotkeysView",
          "name": "Hotkey List"
        }
      ]
    },
    "commands": [
      {
        "command": "hotkeys.importJson",
        "title": "Hotkeys: Import JSON"
      }
    ],
    "menus": {}
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@vscode/vsce": "^3.2.2",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
